    <TextView
        android:id="@+id/txt_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除线"
        android:textSize="50sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txt_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txt_5"
        android:layout_width="wrap_content"
